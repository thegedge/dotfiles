#-----------------------------------------------------------------------------
# Read a value from a second in an INI configuration file
#-----------------------------------------------------------------------------
awk -F'\\s*=\\s*' -v section="[$2]" -v key="$3"  '
  $0 == section { found_section=1; next }
  /\[/ { found_section=0; next }
  found_section && $1 == key { print $2 }
' "$1"
