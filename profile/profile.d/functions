# TODO make this work for bash also
myshell="$(ps -p $$ | awk 'NR > 1 { print $4 }')"
case "${myshell##*/}" in
  zsh)
    fpath+=( "${0%/*}/functions.d" )
    for file in "${0%/*}/functions.d/"*; do
      autoload "${file##*/}"
    done
    ;;
  bash)
    for file in $(find $(dirname $BASH_SOURCE)/functions.d -depth 1 -type f); do
      eval "function ${file##*/} { source \"${file}\"; }"
    done
    ;;
esac
